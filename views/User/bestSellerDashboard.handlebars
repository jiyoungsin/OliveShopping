<div class="container h1" style="color:white">Best Sellers</div>
<section class="on-sale">
    <div class="container">
        <div class="title-box">
            <h2>Hot&nbsp;Hot</h2>
        </div>
    </div>
</section>
<div class="container">
  <div class="row mb-5">
    {{#each cloths}}
    <div class="col-md-4 mb-3 mb-md-3">
        <div class="card py-4 h-100">
            <div class="card-body text-center">
                <img class="img-fluid" src="../uploads/{{ this.ImagePath}}" alt="clothing">
                <div class="container text-center">
                    <p><strong>{{ this.Title }}</strong></p>
                </div>
                <div class="container">
                    <p>{{ this.Desc }}</p>
                </div>
                <div class="container text-center">
                    <p><strong>${{ this.Price }}</strong></p>
                </div>

                <div class="row justify-content-end">
                    <a href="/add-to-cart/{{this._id}}" class="btn btn-success" role="button" value="">Add to Cart</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
